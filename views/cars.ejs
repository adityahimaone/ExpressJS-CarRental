<div>
    <div
        class="d-flex flex-column flex-md-row justify-content-start justify-content-md-between align-items-center gap-3">
        <div>
            <div class="page-header pt-3">
                <nav style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/cars">Cars</a></li>
                        <i class="bi bi-chevron-right fw-bold"></i>
                        <li class="breadcrumb-item active" aria-current="page">List Cars</li>
                    </ol>
                </nav>
            </div>
            <div class="my-4">
                <h4 class="fw-bold">List Car</h4>
            </div>
            <div class="d-flex gap-3">
                <button class="btn btn-primary-light-outline active">All</button>
                <button class="btn btn-primary-light-outline">Small</button>
                <button class="btn btn-primary-light-outline">Medium</button>
                <button class="btn btn-primary-light-outline">Large</button>
            </div>
        </div>
        <div>
            <a href="/cars/add" class="btn btn-primary-main"><i class="bi bi-plus mx-2"></i>Add New Car</a>
        </div>
    </div>
    <div class="my-4 row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
        <% car.forEach(i=> {
            %>
            <div class="col">
                <div class="card">
                    <img src="<%= i.image_src %>" class="card-img-top p-4" alt="cars">
                    <div class="card-body">
                        <h6>
                            <%= i.name %>
                        </h6>
                        <h5 class="card-title">
                            <%= i.price %> / hari
                        </h5>
                        <label><i class="bi bi-key me-1"></i>
                            <%= i.start_rent %> - <%= i.start_rent %>
                        </label>
                        <label><i class="bi bi-clock me-1"></i>
                            Updated At <%= i.updated_at %>
                        </label>
                    </div>
                    <div class="d-flex px-3 pb-3 gap-2">
                        <button type="button" class="btn w-50 btn-outline-danger me-1" data-bs-toggle="modal"
                            data-bs-target="#modalDelete"><i class="bi bi-trash3"></i>Delete</button>
                        <button class="btn w-50 btn-success me-1"><i class="bi bi-pencil-square"></i> Edit</button>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</div>
<%- include('partials/modal.ejs') %>